<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.hristogochev.dotloaders.loaders.PulseLoader
        android:id="@+id/myLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pulse_animDelay="100"
        app:pulse_animDuration="1000"
        app:pulse_dotColor="@color/purple_selected"
        app:pulse_spacing="5dp"
        app:pulse_dotRadius="20dp"
        app:pulse_interpolator="@android:anim/accelerate_interpolator"
        app:pulse_dotCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>